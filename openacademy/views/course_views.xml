<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<!--Course -->
	<record id="view_course_tree" model="ir.ui.view">
		<field name="name">openacademy.course.tree</field>
		<field name="model">openacademy.course</field>
		<field name="arch" type="xml">
			<tree string="Matière" default_order="name">
				<field name="name" />
                <field name="description" />
                <field name="level" />
                <field name="responsible_id" />
			</tree>
		</field>
	</record>
	<record id="view_course_form" model="ir.ui.view">
		<field name="name">openacademy.course.form</field>
		<field name="model">openacademy.course</field>
		<field name="arch" type="xml">
			<form string="Matière">
				<sheet string="Matière">
					<group>
						<group>
							<field name="name"/>
							<field name="description" />
						</group>
						<group>
							<field name="level" />
                            <field name="responsible_id" />
						</group>						
					</group>
					<notebook>
						<page string="Sessions">
							<field name="session_ids" />
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>
	<record id="action_course" model="ir.actions.act_window">
		<field name="name">openacademy.course</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">openacademy.course</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p class="oe_view_nocontent_create">
				Aide
			</p>
			<p>
				Cliquer pour gérer les matières
			</p>
		</field>
	</record>
</odoo>
